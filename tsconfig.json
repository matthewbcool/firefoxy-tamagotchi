{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "public",
    "rootDir": "./src"
  },
  "include": ["src", "globals.d.ts", "src/types/**/*.d.ts", "src/injectUI.ts"],
  "exclude": ["node_modules", "public/dist"]
}
